variable "project_id" {
  description = "GCP project ID"
  type        = string
}

variable "region" {
  description = "GCP region"
  type        = string
  default     = "us-central1"
}

variable "zone" {
  description = "GCP zone"
  type        = string
  default     = "us-central1-a"
}

# Node-specific variables are not needed in Autopilot mode
# GKE Autopilot automatically manages node provisioning, scaling, and configuration